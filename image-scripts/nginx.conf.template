user root;
worker_processes 1;

events {
  worker_connections 1024;
}

http {
  server {
    listen 80;
    root /usr/share/nginx/html;
    charset utf-8;

    location / {
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
     
    }
    error_page 404 /index.html;
    location = /index.html {
          root   /usr/share/nginx/html;  
    }

  }

include /etc/nginx/mime.types;        
default_type application/octet-stream;
}

